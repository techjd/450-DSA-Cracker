<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/topicCard"
    android:background="#ffffff"
    app:cardElevation="5dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/mainTopicLayout"

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntumono_bold"
            android:textColor="@color/black"
            android:textSize="34dp"
            tools:text="Arrays" />

        <LinearLayout
            android:id="@+id/totalNumberOfQuestions"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntumono_bold"
                android:textColor="@color/black"
                android:text="Total Questions - "
                android:textSize="20dp"
                tools:text="Total Questions - " />

            <TextView
                android:id="@+id/totalQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntumono_bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:text="36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreAndDone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/moreToGo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numberOfSolvedQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:textColor="@color/black"

                    android:textSize="20dp"
                    tools:text="28" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:text=" More to go"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:textColor="@color/black"

                    android:textSize="20dp"
                    tools:text="22" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntumono_bold"
                    android:text="% Done"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>